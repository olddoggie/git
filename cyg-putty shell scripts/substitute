# substitute from $1 to $2 in $3
echo "the first param ---need to be substituted; the second param----change to what you want; the third one ---target file"
echo ""
echo "vi $3"
echo "%s/$1/$2/g"
echo ""
echo "take a review for the substitution by awk..."
echo "awk 'gsub(/$1/,\"$2\")' $3"
echo ""
echo "direct-substituting ... !! take care when using !!"
echo "sed -i 's/$1/$2/g' $3"
echo ""
echo "if you wanna roll back ..."
echo "sed -i 's/$2/$1/g' $3"